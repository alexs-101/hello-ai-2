{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "NetCoreServer": "Warning"
    }
  },
  "AllowedHosts": "*",
  "TelemetryServer": {
    "TcpEnabled": true,
    "TcpPort": 8080,
    "UdpEnabled": true,
    "UdpPort": 8081,
    "HealthCheckIntervalSeconds": 30,
    "MaxConcurrentConnections": 10000,
    "BufferSize": 4096,
    "UseServerGC": true
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "TopicPrefix": "telemetry.gps",
    "PartitionCount": 3,
    "BatchSize": 100,
    "LingerMs": 10,
    "CompressionType": "Gzip",
    "EnableIdempotence": true,
    "Acks": "All",
    "RetryBackoffMs": 100,
    "MessageMaxBytes": 1048576,
    "RequestTimeoutMs": 30000,
    "ClientId": "gps-telemetry-server"
  },
  "PluginSettings": {
    "Directory": "./plugins",
    "EnableHotReload": false,
    "ReloadDelayMs": 100,
    "PluginPaths": [
      "./src/Plugins/NmeaPlugin/bin/Debug/net8.0/NmeaPlugin.dll"
    ]
  },
  "ConnectionManager": {
    "TcpPort": 8080,
    "UdpPort": 8081,
    "EnableTcp": true,
    "EnableUdp": true,
    "MaxConnections": 10000,
    "ReceiveTimeoutMs": 300000,
    "BufferSize": 4096
  },
  "Monitoring": {
    "EnableOpenTelemetry": true,
    "EnableMetrics": true,
    "EnableTracing": true,
    "ServiceName": "gps-telemetry-server",
    "ServiceVersion": "1.0.0",
    "Exporters": {
      "Console": {
        "Enabled": true
      },
      "Otlp": {
        "Enabled": false,
        "Endpoint": "http://localhost:4317"
      },
      "Prometheus": {
        "Enabled": false,
        "Endpoint": "/metrics",
        "Port": 9090
      }
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    }
  }
}
